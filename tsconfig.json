{
  "compilerOptions": {
    "target": "es6",                          // Set the JavaScript target version
    "module": "commonjs",                     // Specify module code generation
    "outDir": "./public",                     // Output directory for compiled files
    "rootDir": "./src",                       // Root directory of input files
    "strict": true,                           // Enable all strict type-checking options
    "esModuleInterop": true                   // Enable interoperability between CommonJS and ES Modules
  },
  "include": [
    "src/**/*.ts"                             // Include all TypeScript files in src directory
  ],
  "exclude": [
    "node_modules"                           // Exclude node_modules from compilation
  ]
}
